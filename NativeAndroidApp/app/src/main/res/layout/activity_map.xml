<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/padding_horizontal"
    tools:context=".MapActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/map"
            android:layout_width="@dimen/map_width"
            android:layout_height="@dimen/map_height"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/audio_button"
            style="@style/Clickable"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:layout_marginLeft="@dimen/padding_audio_map_horizontal"
            android:layout_marginRight="@dimen/padding_audio_map_horizontal"
            android:layout_marginTop="@dimen/padding_audio_map_vertical"
            android:contentDescription="@string/audio" />

    </RelativeLayout>

</ScrollView>